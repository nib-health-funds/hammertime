{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation Hammertime stack",
  "Resources": {
    "HammertimeExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/"
      }
    },
    "HammertimeExecutionPolicy": {
      "DependsOn": [
        "HammertimeExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "HammertimeEC2ASGRolePolicy",
        "Roles": [
          {
            "Ref": "HammertimeExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "Stmt1454384406267",
              "Action": [
                "ec2:CreateTags",
                "ec2:DeleteTags",
                "ec2:DescribeInstances",
                "ec2:StartInstances",
                "ec2:StopInstances"
              ],
              "Effect": "Allow",
              "Resource": "*"
            },
            {
              "Sid": "Stmt1454384458071",
              "Action": [
                "autoscaling:CreateOrUpdateTags",
                "autoscaling:DeleteTags",
                "autoscaling:DescribeAutoScalingGroups",
                "autoscaling:UpdateAutoScalingGroup"
              ],
              "Effect": "Allow",
              "Resource": "*"
            }
          ]
        }
      }
    },
    "StopHammertime": {
      "Type": "AWS::Lambda::Function",
      "DependsOn": [
        "HammertimeExecutionRole",
        "HammertimeExecutionPolicy"
      ],
      "Properties": {
        "Code": {
          "S3Bucket": "nib-lambdas",
          "S3Key": "stop-hammertime.zip"
        },
        "Role": {
          "Fn::GetAtt": [
            "HammertimeExecutionRole",
            "Arn"
          ]
        },
        "Timeout": 60,
        "Handler": "exports.handler",
        "Runtime": "nodejs",
        "MemorySize": 128
      }
    },
    "StartHammertime": {
      "Type": "AWS::Lambda::Function",
      "DependsOn": [
        "HammertimeExecutionRole",
        "HammertimeExecutionPolicy"
      ],
      "Properties": {
        "Code": {
          "S3Bucket": "nib-lambdas",
          "S3Key": "start-hammertime.zip"
        },
        "Role": {
          "Fn::GetAtt": [
            "HammertimeExecutionRole",
            "Arn"
          ]
        },
        "Timeout": 60,
        "Handler": "exports.handler",
        "Runtime": "nodejs",
        "MemorySize": 128
      }
    }
  }
}
