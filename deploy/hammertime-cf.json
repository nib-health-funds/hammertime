{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation Hammertime stack",
  "Parameters": {
    "LambdaVersion": {
      "Description": "Version string for Lambda functions",
      "Type": "String"
    }
  },
  "Resources": {
    "HammertimeExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/"
      }
    },
    "HammertimeExecutionPolicy": {
      "DependsOn": [
        "HammertimeExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "HammertimeEC2ASGRolePolicy",
        "Roles": [
          {
            "Ref": "HammertimeExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "1",
              "Action": [
                "ec2:CreateTags",
                "ec2:DeleteTags",
                "ec2:DescribeInstances",
                "ec2:StartInstances",
                "ec2:StopInstances"
              ],
              "Effect": "Allow",
              "Resource": "*"
            },
            {
              "Sid": "2",
              "Action": [
                "autoscaling:CreateOrUpdateTags",
                "autoscaling:DeleteTags",
                "autoscaling:DescribeAutoScalingGroups",
                "autoscaling:UpdateAutoScalingGroup"
              ],
              "Effect": "Allow",
              "Resource": "*"
            },
            {
              "Sid": "3",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Effect": "Allow",
              "Resource": "arn:aws:logs:*:*:*"
            }
          ]
        }
      }
    },
    "StopHammertime": {
      "Type": "AWS::Lambda::Function",
      "DependsOn": [
        "HammertimeExecutionRole",
        "HammertimeExecutionPolicy"
      ],
      "Properties": {
        "Code": {
          "S3Bucket": "nib-kaos-lambdas",
          "S3Key": {
            "Fn::Join": [
              "",
              [
                "stop-hammertime-",
                {
                  "Ref": "LambdaVersion"
                },
                ".zip"
              ]
            ]
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "HammertimeExecutionRole",
            "Arn"
          ]
        },
        "Timeout": 60,
        "Handler": "stop-hammertime.handler",
        "Runtime": "nodejs",
        "MemorySize": 128
      }
    },
    "StartHammertime": {
      "Type": "AWS::Lambda::Function",
      "DependsOn": [
        "HammertimeExecutionRole",
        "HammertimeExecutionPolicy"
      ],
      "Properties": {
        "Code": {
          "S3Bucket": "nib-kaos-lambdas",
          "S3Key": {
            "Fn::Join": [
              "",
              [
                "start-hammertime-",
                {
                  "Ref": "LambdaVersion"
                },
                ".zip"
              ]
            ]
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "HammertimeExecutionRole",
            "Arn"
          ]
        },
        "Timeout": 60,
        "Handler": "start-hammertime.handler",
        "Runtime": "nodejs",
        "MemorySize": 128
      }
    }
  }
}
