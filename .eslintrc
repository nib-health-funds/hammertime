{
    "extends": "airbnb",
    "rules": {
        "no-console": "off",
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2,
        "camelcase": "off",
        "max-len": "off",
        "object-shorthand": 0
    },
    "globals": {
        "expect": true
    },
    "plugins": [
        "mocha",
        "chai-expect",
        "chai-friendly"
    ],
    "env": {
        "mocha": true
    }
}